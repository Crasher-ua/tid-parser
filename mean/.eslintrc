{
    "globals": {
        "it": false,
        "describe": false,
        "beforeEach": false,
        "afterEach": false,
        "module": false,
        "inject": false,
        "expect": false,
        "spyOn": false,
        "jasmine": false,
        "Blob": false
    },
    "extends": "angular",
    "parser": "babel-eslint",
    "ecmaFeatures": {
        "arrowFunctions": true,
        "binaryLiterals": true,
        "blockBindings": true,
        "classes": true,
        "defaultParams": true,
        "desctructuring": true,
        "forOf": true,
        "generators": true,
        "modules": true,
        "restParams": true,
        "spread": true,
        "superInFunctions": true,
        "templateStrings": true,
        "jsx": false
    },
    "plugins": [],
    "rules": {
        "angular/ng_controller_as_vm": [0],
        "strict": [2, "never"],

        "angular/ng_module_getter": 0,
        "angular/ng_definedundefined": 0,
        "angular/ng_json_functions": 0,
        "angular/ng_typecheck_number": 0,
        "angular/ng_typecheck_array": 0,
        "angular/ng_timeout_service": 0,
        "angular/ng_no_angular_mock": 0,
        "angular/ng_controller_name": 0,

        //Next rules added according to the http://eslint.org/docs/rules/ :

        //Possible errors:
        "comma-dangle": [2, "never"],
        "no-cond-assign": 2,
        "no-console": 2,
        "no-constant-condition": 2,
        "no-control-regex": 2,
        "no-debugger": 1,
        "no-dupe-args": 2,
        "no-dupe-keys": 2,
        "no-duplicate-case": 2,
        "no-empty": 2,
        "no-ex-assign": 2,
        "no-extra-boolean-cast": 2,
        "no-extra-semi": 2,
        "no-func-assign": 2,
        "no-inner-declarations": 2,
        "no-invalid-regexp": 2,
        "no-irregular-whitespace": 2,
        "no-negated-in-lhs": 2,
        "no-obj-calls": 2,
        "no-sparse-arrays": 2,
        "no-unreachable": 2,
        "use-isnan": 2,
        "valid-typeof": 2,
        "no-unexpected-multiline": 2,

        // Best practices
        "block-scoped-var": 2,
        "complexity": [2, 7],
        "consistent-return": 2,
        "curly": 2,
        "dot-notation": 2,
        "dot-location": [2, "property"],
        "eqeqeq": 2,
        "guard-for-in": 1,
        "no-caller": 2,
        "no-else-return": 2,
        "no-eq-null": 2,
        "no-eval": 2,
        "no-extend-native": 2,
        "no-extra-bind": 1,
        "no-fallthrough": 2,
        "no-floating-decimal": 2,
        "no-implied-eval": 2,
        "no-iterator": 2,
        "no-labels": 2,
        "no-lone-blocks": 2,
        "no-loop-func": 2,
        "no-multi-spaces": 2,
        "no-native-reassign": 2,
        "no-new-func": 2,
        "no-new-wrappers": 2,
        "no-new": 2,
        "no-octal": 2,
        "no-param-reassign": 2,
        "no-proto": 2,
        "no-redeclare": [2],
        "no-return-assign": 2,
        "no-script-url": 2,
        "no-self-compare": 2,
        "no-throw-literal": 2,
        "no-unused-expressions": 2,
        "no-useless-call": 2,
        "no-void": 2,
        "no-with": 2,
        "radix": 1,
        "wrap-iife": 1,
        "yoda": 2,

        //Variables
        "no-delete-var": 2,
        "no-shadow-restricted-names": 2,
        "no-shadow": 2,
        "no-undef-init": 2,
        "no-undef": 2,
        "no-unused-vars": 2,
        "no-use-before-define": [2, "nofunc"],
        "one-var": [2, "never"],

        // Code style
        "array-bracket-spacing": 2,
        "brace-style": 2,
        "camelcase": 2,
        "comma-spacing": [2, {"before": false, "after": true}],
        "comma-style": 2,
        "computed-property-spacing": 2,
        "consistent-this": [2, "vm"],
        "eol-last": 2,
        "id-length": [2, {"min": 2, "max": 50, "exceptions": ["i", "j"]}],
//    We need to clarify this rule, because of false positives    "indent": 2,
        "key-spacing": [2, {"beforeColon": false, "afterColon": true}],
        "lines-around-comment": 2,
        "max-nested-callbacks": [2, 4],
        "new-cap": 2,
        "new-parens": 2,
//    about 600 errors.    "newline-after-var": 2,
        "no-continue": 2,
        "no-lonely-if": 2,
        "no-mixed-spaces-and-tabs": 2,
        "no-multiple-empty-lines": [2, {"max": 2}],
        "no-nested-ternary": 2,
        "no-new-object": 2,
        "no-spaced-func": 2,
        "no-trailing-spaces": 2,
        "no-underscore-dangle": 2,
        "no-unneeded-ternary": 2,
        "object-curly-spacing": 2,
        "operator-assignment": [2, "always"],
        "operator-linebreak": [2, "before"],
        "padded-blocks": [2, "never"],
        "quote-props": [2, "as-needed"],
        "quotes": [2, "single"],
        "semi-spacing": [2, {"before": false, "after": true}],
        "semi": [2, "always"],
        "space-after-keywords": 2,
        "space-before-blocks": 2,
        "space-before-function-paren": [2, "never"],
        "space-in-parens": 2,
        "space-infix-ops": 2,
        "space-return-throw-case": 2,
        "space-unary-ops": 2,

        // ES6
        "arrow-parens": [2, "always"],
        "arrow-spacing": 2,
//        "constructor-super": 1,
        "no-class-assign": 2,
        "no-const-assign": 2,
        "prefer-const": 2,
        "no-dupe-class-members": 2,
        "no-this-before-super": 1,
        "no-var": 2,
        "object-shorthand": [2, "properties"],
//    Eslint 1.2.0    "prefer-arrow-callback": [2, {"allowNamedFunctions": true}],
        "prefer-template": 2

        //Legacy
//    We need to talk about this rule    "max-depth": [2, 4],
        //"max-len": [2, 120, 4]
//    We need to talk about this rule    "max-params": 1,
//    We need to talk about this rule    "max-statements": 1,




    }
}
